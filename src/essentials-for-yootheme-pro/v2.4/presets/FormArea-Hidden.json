{
    "type": "section",
    "props": {
        "yooessentials_form": {
            "state": true,
            "after_submit_actions": [
                {
                    "type": "message",
                    "props": {
                        "content": "<p>Thank you! Your input was:</p>\n<p>{input}</p>\n<p>With hidden input: {hidden}</p>"
                    }
                }
            ]
        }
    },
    "children": [
        {
            "type": "row",
            "children": [
                {
                    "type": "column",
                    "children": [
                        {
                            "type": "yooessentials_form_textarea",
                            "props": {
                                "control_name": "input"
                            }
                        },
                        {
                            "type": "yooessentials_form_hidden",
                            "props": {
                                "control_name": "hidden",
                                "control_value": "I was hidden!"
                            }
                        },
                        {
                            "type": "yooessentials_form_button"
                        }
                    ]
                }
            ]
        }
    ],
    "name": "FormArea - Hidden"
}
